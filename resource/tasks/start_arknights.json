{
  "name": "start_arknights",
  "description": "启动明日方舟游戏",
  "loop": false,
  "steps": [
    {
      "action": "shell",
      "shell_cmd": "am start -n com.hypergryph.arknights/com.u8.sdk.U8UnityContext"
    },
    {
      "action": "wait",
      "duration": 10000
    },
    {
      "action": "click",
      "x": 960,
      "y": 540
    },
    {
      "action": "wait",
      "duration": 8000
    },
    {
      "action": "screenshot",
      "save_name": "start_screen.png"
    },
    {
      "action": "ocr_click",
      "save_name": "start_screen.png",
      "text": "开始唤醒"
    }
  ]
}
